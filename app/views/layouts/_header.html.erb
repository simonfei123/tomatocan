<header>
  <style>
body {
  background-color: #F0F0F0;
}
</style>

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#globalNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("yellow brain.png", class: "navbar-brand", title: "ThinQ.tv", id: "navbarLogo", :style => "position:relative;"), root_path %>
    </div>
    <div class="collapse navbar-collapse" id="globalNavbar">
      <ul class="nav navbar-nav">
        <li class="nav-item"><%= link_to "Home", "/", title: "Invite friends to join thought-provoking Conversations on ThinQ.tv" %></li>
        <li class="nav-item"><%= link_to "About Us", '/getinvolved', title: "Get your networks talking about the issues!" %></li>
        <li class="nav-item"><%= link_to "Join the Team", '/jointheteam', title: "Work with us" %></li>
        <li class="nav-item"><%= link_to "Drop In Anytime", '/studyhall', title: "Co-work/hack with us" %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %>
              <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "View Profile", user_profile_url(current_user.permalink), method: :get %></li>
              <li><%= link_to "Control Panel", user_controlpanel_url(current_user.permalink), method: :get %></li>
            </ul>
          </li>
          <li>
            <p class="navbar-btn">
              <%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => "btn btn-default" %>
            </p>
          </li>
        <% else %>
          <li>
            <p class="navbar-btn">
              <%= link_to "Sign Up", '/signup', class: "btn btn-primary" %>
              <%= link_to 'Sign In', "/login", class: "btn btn-default" %>
            </p>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
